<!DOCTYPE html>
<html lang="fa">
<head>
    <title>Socket.IO chat</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

<div class="chat-container">
    <p style="text-align: right">
        <a href="/logout" style="color: #eee;padding: 0 13px;text-decoration: none">Logout</a>
    </p>
    <ul id="messages">
        <% if (Object.keys(user).length !== 0) { %>
            <li style="text-align: center;font-size: 85%;color: #555;">
                <span style="vertical-align: super">Welcome <%= user.name %> ðŸ˜‰</span>
            </li>
        <% }  %>
    </ul>
    <form id="form" action="">
        <input id="input" autocomplete="off" />

        <input type="hidden" id="umail" value="<%= user.email %>">
        <input type="hidden" id="uname" value="<%= user.name %>">
        <button>Send</button>
    </form>

</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/theme/js/jquery-3.3.1.min.js"></script>
<script src="/libs/cryptojs.js"></script>
<script src="/libs/md5.js"></script>
<script src="/libs/jsencrypt.min.js"></script>
<script src="/scripts.js" type="text/javascript" ></script>
</body>
</html>